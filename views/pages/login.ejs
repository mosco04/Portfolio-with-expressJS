<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
    <!-- =================Login Screen==================== -->
  <body class="vh-100 p-6 bg-dark" >
    <%- include('../partials/navigation-index.ejs') %>
    <main  class="d-flex h-100 flex-row justify-content-center overflow-hidden p-5">
        <form class="my-5" action="/login" method="post" >
            <div class="form-group">
              <label for="username">Username</label>
              <input required type="text" name="username" class="form-control" id="exampleInputEmail1" aria-describedby="username" placeholder="Enter username">
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Password</label>
              <input required name="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>
            <% if(title == 'Wrong'){ %>
                <div class="alert alert-danger" role="alert">
                    Wrong Password
                  </div>
              <% } else{ %>  
               
             <% } %>
            
            <button type="submit" class="btn btn-primary my-3">Submit</button>
          </form>
    </main>
  </body>
  <%- include('../partials/footer.ejs') %>

</html>